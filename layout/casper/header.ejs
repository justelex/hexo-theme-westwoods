<header class="site-head">
    <div style="position: absolute; top: 0px; z-index: 20; width: 100%;">
        <nav id="main-top-nav">
            <% if (site.data.external){ %>
                <ul>
                    <% for (var i in site.data.external){ %>
                        <li>
                            <a class="main-top-nav-link" href="<%- site.data.external[i] %>" target="_blank"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            <% } %>
        </nav>
        <div style="display: flex; flex-direction: row; justify-content: flex-end;">	
            <img src="https://api.westwoodlabs.de/spaceapi/state/state.png" alt="Space Stauts" />
        </div>
    </div>

    <% if (page.image) { %>
        <img src="<%- config.root %>images/<%- page.image %>" alt="Banner Bild" class="header-bg"/>
    <% } else { %>
        <canvas width="1500" height="800" id="canvasHeader" class="header-bg">
        </canvas>
    <% } %>

    <div class="site-head-content inner">
        <% if (config.logo) { %>
            <a class="blog-logo" href="<%- config.root %>">
                <img src="<%- config.logo %>" title="Westwoodlabs Logo" alt="<%- config.title %> Logo"/>
            </a>
        <% } %>
        <h1 class="blog-title">
            <%- config.shortsubtitle %>
        </h1>
        <h2 class="blog-description">
            <span class="text-bg">
                <%- config.subtitle %>
            </span>
        </h2>
    </div>
</header>

<nav id="main-nav">
    <% if (site.data.menu){ %>
        <ul>
            <% for (var i in site.data.menu){ %>
                <li>
                    <a class="main-nav-link" href="<%- site.data.menu[i] %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    <% } %>
</nav>
